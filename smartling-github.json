{
    "locales" : [
        {
            "smartling"   : "de-DE",
            "application" : "de_DE"
        },
        {
            "smartling"   : "nl-NL",
            "application" : "nl_NL"
        },
        {
            "smartling"   : "ru-RU",
            "application" : "ru_RU"
        },
        {
            "smartling"   : "zh-CN",
            "application" : "zh_HANS"
        }
    ],
    "resourcesSets": [
        {
           	"type"                      : "javaProperties",
            "pathRegex"                 : "resources/.*\\.properties",
            "translationPathExpression" : "translation/${originalFile.baseName}_${locale}.${originalFile.extension}",
            "translationCommitMessage"  : "Task TRN-18 translate ${originalFile.name} to ${locale}\n${translatedFile.fullName}",
            "authorizeContent"          : "true"
        }
    ]
}