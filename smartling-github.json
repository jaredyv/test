{
    "locales" : [
        {
            "smartling"   : "de-DE",
            "application" : "de_DE"
        },
        {
            "smartling"   : "nl-NL",
            "application" : "nl_NL"
        },
        {
            "smartling"   : "ru-RU",
            "application" : "ru_RU"
        },
        {
            "smartling"   : "zh-CN",
            "application" : "zh_HANS"
        }
    ],
    "resourceSets": [
                 {
             "type"                      : "javaProperties",
             "authorizeContent"          : true,
             "pathRegex"                 : "resources/(?<path>.*)\\.properties",
             "translationPathExpression" : "translation/${locale}/${path}.${originalFile.extension}",
             "translationCommitMessage"  : "Task TRN-18 translate ${originalFile.name} to ${locale}\n${translatedFile.fullName}"
         }
    ]
}